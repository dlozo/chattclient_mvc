@model IEnumerable<ChattClient_MVC.ChattServiceReference.Message>

@{
    ViewBag.Title = "GetMessages";
}

<div class="chat">
    <div class="chat-header">
        <h1>Chat</h1>
    </div>
    <div class="chat-history">
        @foreach (var item in Model)
        {
            <ul>
                <li class="chat-item">
                    <div class="message">
                        <span class="message__user-name">@item.UserName</span>
                        <time class="message__time">
                            @item.TimeStamp
                        </time>
                        <p class="message__text">@item.MessageText</p>
                    </div>
            </ul>
        }

    </div>
    <div class="chat-controls">
        <textarea class="chat-controls__textarea" rows="2" placeholder="Type your message"></textarea>
        <div class="btns-row">
            <a href="#" class="chat-controls__btn">Send</a>
            <a href="#" class="attach-file"><i class="fa fa-paperclip"></i></a>
        </div>
    </div>
</div>

